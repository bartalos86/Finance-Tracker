      <Setter.Value>
        <DataTemplate>
          <Grid x:Name="LayoutRoot">
            <StackPanel HorizontalAlignment="Right" Grid.RowSpan="1" VerticalAlignment="Stretch" Width="58.77">
              <TextBlock TextWrapping="Wrap" Text="User Name"/>
            </StackPanel>
          </Grid>
        </DataTemplate>
      </Setter.Value>
    </Setter>
  </Style>

</ResourceDictionary>