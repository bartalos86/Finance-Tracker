<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DesignGyakorlas.Styles.TextBox">

    <Style TargetType="TextBox" x:Key="TextBoxDatabaseCheck">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBoxBase">
                    <Border CornerRadius="2" Background="{TemplateBinding Background}">
                        <StackPanel Orientation="Horizontal">
                            <ScrollViewer Margin="2" Width="165" x:Name="PART_ContentHost" />
                            <Image x:Name="kep" Height="25" Width="25" HorizontalAlignment="Right" Source="{Binding TextBoxDatabaseCheckImage, UpdateSourceTrigger=PropertyChanged ,Mode=OneWay}"/>
                        </StackPanel>
                       
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style> 

</ResourceDictionary>